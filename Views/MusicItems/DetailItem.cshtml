@model AppB2C2.Models.ViewModels.MusicItemDetailsViewModel

<div style="background-color: #f0f0f0; padding: 20px; border-radius: 10px; display: flex; align-items: center;">
    <div style="flex: 1;">
        <h1>@Model.ItemTitle</h1>
        <dl>
            <dt>Description:</dt>
            <dd>@Model.ItemDescription</dd>

            <dt>Artist:</dt>
            <dd>@Model.Artist</dd>

            <dt>Item content:</dt>
            <dd>@Model.ItemContent</dd>

            <dt>Item value (in euros):</dt>
            <dd>@Model.ItemValue</dd>            
        </dl>
    </div>


    @if (Model.Tags != null && Model.Tags.Any())
    {
        <div style="margin-top: 20px;">
            <h3>Tags:</h3>
            @foreach (var tag in Model.Tags)
            {
                <div style="display: inline-block; padding: 8px; margin: 4px; background-color: #66bb6a; color: #fff; border-radius: 5px;">
                    @tag
                </div>
            }
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div style="flex-shrink: 0; margin-left: 20px;">
            <img src="@Url.Content(Model.ImageUrl)" alt="Item Image" style="max-width: 500px; height:auto" />
        </div>
    }
</div>
