@model AppB2C2.Models.ViewModels.MusicItemDetailsViewModel

<div style="background-color: #f0f0f0; padding: 20px; border-radius: 10px; display: flex; align-items: center; flex-wrap: wrap;">
    <div style="flex: 1; min-width: 300px; max-width: 600px;">
        <h1>@Model.ItemTitle</h1>
        <dl style="font-size: 18px;">
            <dt>Description:</dt>
            <dd>@Model.ItemDescription</dd>

            <dt>Artist:</dt>
            <dd>@Model.Artist</dd>

            <dt>Item content:</dt>
            <dd>@Model.ItemContent</dd>

            <dt>Item value:</dt>
            <dd>@($"{Model.ItemValue:C}")</dd>
        </dl>

        @if (Model.Tags != null && Model.Tags.Any())
        {
            <div style="margin-top: 20px;">
                <h3>Tags:</h3>
                @foreach (var tag in Model.Tags.OrderBy(tag => tag))
                {
                    <div style="display: inline-block; padding: 6px; margin: 4px; background-color: dimgray; color: #fff; border-radius: 5px; width:80px; text-align: center;">
                        @tag
                    </div>
                }
            </div>
        }

        <div style="margin-top: 20px;">
            <h3>Item Type:</h3>
            <div style="padding: 6px; background-color: dimgray; color: #fff; border-radius: 5px; width:80px; text-align: center;">
                @Model.ItemType
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div style="flex-shrink: 0; margin-left: 20px;">
            <img src="@Url.Content(Model.ImageUrl)" alt="Item Image" style="max-width: 100%; height:auto; max-height: 500px;" />
        </div>
    }

    <div style="margin-top: 20px; flex-basis: 100%;">
        <h3>Tag Price:</h3>
        <div style="padding: 6px; background-color: dimgray; color: #fff; border-radius: 5px; width:80px; text-align: center;">
            @Model.TagPrice.ToString("C")
        </div>
    </div>

    <div style="margin-top: 20px;">
        <h3>Price Difference:</h3>
        <div style="padding: 8px; background-color: dimgray; color: #fff; border-radius: 5px; width:100px">
            @Model.PriceDifferencePercentage.ToString("0.0")%
        </div>
    </div>
</div>



