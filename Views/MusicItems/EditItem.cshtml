@model AppB2C2.Models.ViewModels.EditMusicViewModel

<h2>Edit Music Item</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ItemTitle">Item Title</label>
        <input asp-for="ItemTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ItemDescription">Item Description</label>
        <textarea asp-for="ItemDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Artist">Artist</label>
        <input asp-for="Artist" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ItemContent">Item Content</label>
        <textarea asp-for="ItemContent" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DateAdded">Date Added</label>
        <input asp-for="DateAdded" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ItemValue">Item Value</label>
        <input asp-for="ItemValue" type="number" step="0.01" class="form-control" />
    </div>

   @* <div class="form-group">
        <label asp-for="TagIds">Tags</label>
        <select asp-for="TagIds" asp-items="@ViewBag.Tags" class="form-control" multiple></select>

    </div> *@

    <button type="submit" class="btn btn-primary">Save</button>
</form>
